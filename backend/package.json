{
  "name": "lplamp-backend",
  "version": "1.0.0",
  "description": "LPlamp Backend API Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/tests/integration/**/*.test.ts' --runInBand --verbose",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "ts:check": "node ../scripts/ts-error/analyzer.js"
  },
  "keywords": [
    "lplamp",
    "backend",
    "api",
    "oauth",
    "jwt"
  ],
  "author": "LPlamp Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/archiver": "^6.0.3",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "archiver": "^7.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "puppeteer": "^24.10.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
